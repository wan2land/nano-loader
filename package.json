{
  "name": "nano-loader",
  "version": "1.1.0",
  "description": "Dynamic Script Loader for Browser.",
  "keywords": [
    "dynamic import",
    "import",
    "load script",
    "load",
    "script",
    "browser"
  ],
  "author": "Changwan Jun <wan2land@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wan2land/nano-loader.git"
  },
  "bugs": {
    "url": "https://github.com/wan2land/nano-loader/issues"
  },
  "scripts": {
    "prepublish": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "build": "npm run build:esm && npm run build:iife && npm run build:cjs && npm run build:dts",
    "build:esm": "esbuild index.ts --bundle --outfile=./index.mjs --format=esm",
    "build:iife": "esbuild index.ts --bundle --outfile=./index.iife.js --format=iife --global-name=NanoLoader",
    "build:cjs": "esbuild index.ts --bundle --outfile=./index.cjs --format=cjs",
    "build:dts": "tsc"
  },
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "browser": "./index.iife.js",
  "files": [
    "index.d.ts",
    "index.iife.js",
    "index.mjs",
    "index.cjs"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.mjs"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.cjs"
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "esbuild": "^0.17.5",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.0"
  }
}
